<%= form_for @post do |f| %>
<% if @post.errors.any? %>
<div id="errors">
  <h2><%= pluralize(@post.errors.count,"error")%> prevented this post from saving</h2>
  <ul>
    <% @post.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <%end%>
  </ul>
</div>
<% end %>
<p>
<%= f.label :title %> <br>
<%= f.text_field :title %>
</p>
<p>
<%= f.label :body %> <br>
<%= f.text_area :body %>
</p>
<legend>Image</legend>
<%= f.hidden_field :image_cache %>
<%= f.file_field :image %><br>
<p>
  <legend>YouTube Link</legend>
  <%= f.text_field :ytlink %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
